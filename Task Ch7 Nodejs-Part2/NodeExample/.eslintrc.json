{
  "env": {
    "node": true,
    "es6": true
  },
  "parserOptions": {
    "ecmaVersion": 2017
  },
  "rules": {
    "no-console": "off"
    "no-undef": "off",  // This turns off the rule flagging 'require' and '__dirname' as undefined
    "no-underscore-dangle": "off"  // Allows dangling underscores like in '__dirname'
  }
}

